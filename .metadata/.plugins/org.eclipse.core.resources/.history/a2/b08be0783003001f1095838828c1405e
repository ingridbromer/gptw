package com.gptw.service;

import java.awt.RenderingHints.Key;

import io.jsonwebtoken.Claims;
import io.jsonwebtoken.Jwts;
import io.jsonwebtoken.SignatureAlgorithm;
import io.jsonwebtoken.security.Keys;

public class TokenValidationService {

	// Chave secreta para verificar a assinatura do token
	private static final Key SECRET_KEY = Keys.secretKeyFor(SignatureAlgorithm.HS256);

	public static boolean validateToken(String token) {
		try {
			// Analisa o token JWT
			JWT = Jwts.parserBuilder().setSigningKey(SECRET_KEY).build().parseClaimsJws(token);

			// Obtém as reivindicações (claims) do token
			Claims claims = jwt.getBody();

			// Aqui você pode realizar validações adicionais, se necessário

			// Se o token foi analisado com sucesso e as validações passaram, retorna
			// verdadeiro
			return true;
		} catch (Exception e) {
			// Se houver algum erro durante a validação, retorna falso
			return false;
		}
	}

}
