spring.application.name=file-service
server.port=8081

##Kafka Configs
spring.kafka.bootstrap-servers=localhost:9092
app.output-kafka-topic=employee-topic
app.kafka-topic-num-partitions=1
app.kafka-topic-replication-factor=1

spring.kafka.producer.value-serializer=org.springframework.kafka.support.serializer.JsonSerializer 
spring.kafka.producer.properties.spring.json.add.type.headers=false

# Database
spring.datasource.driver-class-name=org.postgresql.Driver
spring.datasource.url=jdbc:postgresql://localhost:5432/employee
spring.datasource.username=postgres
spring.datasource.password=postgres
